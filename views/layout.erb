<html>
  <head>
    <title>Dataplace <% if @user %>- <%= @user %>@<%= @host %>/<%= @database %><% end %></title>
    <style>
      BODY {
        background: #99999f;
        font-family: Helvetica, Arial, sans-serif;
        font-size: 11pt;
        margin: 0px;
        padding: 0px;
      }
      
      #top {
        background: #22300B;
/*      background: #222228; */
        padding-bottom: 0px;
        border: 0px;
        border-bottom: 4px solid #000;
        padding-top: 0.45em;
      }
      
      #top h1 {
        color: white;
        font-weight: normal;
        margin-bottom: 0px;
        margin-top: 0.45em;
        margin-left: 0.45em;
      }
      
      #top h2 {
        font-size: 10pt;
        font-weight: normal;
        color: #42502B;
        margin-top: 0px;
        margin-bottom: 1.4em;
        margin-left: 1.1em;
        
      }
      
      #badge {
        background: #28360F;
        padding: 0.45em;
        float: right;
        width: 20.5em;
        margin-right: 0.45em;
      }
      
      #badge img {
        float: left;
        margin: 0;
        margin-right: 0.45em;
      }
      
      #badge a {
        color: white;
      }
      
      #badge span {
        font-size: 18pt;
        color: #f6f6f6;
      }
      
      #badge p {
        margin: 2px 0px;
        color: #aaa;
        font-size: 8pt;
      }
      
      #content h1 {
        color: black;
      }
      
      #context {
        padding-top: 0px;
        clear: both;
      }
      
      #content {
        background: white;
        margin-right: 24.5em;
        padding: 1em;
        margin-left: 0.75em;
        font-size: 10pt;
      }
      
      #side {
        float: right;
        width: 21.25em;
        padding: 0.45em;
      }
      
      #bottom {
        clear: both;
        padding: 1em;
        text-align: center;
        font-size: 8pt;
        color: #17171e;
      }
            
      #content h1, h2, h3, h4, h5, h6 {
        color: #333;
        font-weight: normal;
      }
      
      #content h3, h4 {
        font-weight: bold;
      }
      
      #content h1 {
        font-size: 18pt;
      }
      
      #content h2 {
        margin-top: 1.5em;
        font-size: 16pt;
      }
      
      h1.page-title {
        font-size: 24pt !important;
        border-bottom: 1px solid #ccc;
        padding-bottom: 0.25em;
        margin-top: 0px;
        color: #000 !important;
      }
      
      div.side-block {
        background: #aaaaaf;
        font-size: 10pt;
        padding: 0.45em;
        margin-bottom: 0.45em;
      }

      div.side-block p {
        margin: 0.45em 0em;
        font-size: 8pt;
      }

      div.side-block ul {
        list-style-type: none;
        padding: 0px;
        margin: 0px;
      }

      div.side-block ul li {
        font-size: 8pt !important;
        padding: 0.45em 0.2em;
        border-bottom: 1px solid #88888d;
        color: #444448;
      }

      div.side-block ul li a {
        text-decoration: none;
        color: #333337;
      }

      div.side-block p.meta-link {
        text-align: right;
      }

      div.side-block p.meta-link a {
        color: black;
      }

      div.side-block ul li a:hover {
        color: black;
      }

      div.side-block h1 {
        font-size: 12pt;
        margin: 0px;
      }

      
      #meta {
        padding: 1em;
        font-size: 8pt;
        text-align: center;
        background: #eaeaef;
        border: 1px solid #ddd;
      }
      
      #content input.text, textarea.text {
        width: 100%;
      }

      #content .big {
        font-size: 18pt;
      }
      
      #content label {
        font-size: 10pt;
        font-weight: bold;
        color: #999;
      }
      
      div.buttons {
        text-align: right !important;
      }
      
      #list {
        list-style-type: none;
        padding: 0px;
        margin: 0px;
      }

      #list li {
        font-size: 14pt;
        margin: 0.75em 0em;
        border: 0px;
        padding: 0em 0em 0.5em 0.5em;
        border-bottom: 1px solid #ddd;
      }

      #list li a {
        text-decoration: none;
        color: #222;
      }

      #list li span {
        font-size: 10pt;
        color: #999;
      }
      
      a.database-link {
        color: #999 !important;
      }
      
      a.database-link:hover {
        color: #333 !important;
      }
      
      table.listing {
        font-size: 10pt;
        border-collapse: collapse; 
      }
      
      table.listing tr td {
        border-spacing: 0px !important;
        padding: 0.6em;
        border: 0px;
        border-right: 1px solid #ccc;
      }
      
      table.listing tr th.last {
        border-right: 1px solid #ccc;
      }
      
      table.listing tr th {
        background: #666;
        color: #ddd;
        margin: 0px;
        font-size: 8pt;
        padding: 0.6em;
      }
      
      table.listing tr td.dark {
        background: #ddd;
        font-size: 10pt;
      }
      
      table.listing tr td.bigger {
        font-size: 14pt;
      }
      
      table.top {
        font-size: 10pt;
        border-collapse: none; 
        margin-bottom: 1em;
        border-spacing: 0.5em 0em;
      }
      
      table.top tr td {
        border-spacing: 0px !important;
        padding: 0.6em;
        font-size: 18pt;
        border: 1px solid #ccc;
        text-align: center;
      }
      
      table.top tr th {
        background: #333;
        color: #eee;
        text-align: center;
        font-size: 7pt;
        padding: 0.6em 1em;
        font-weight: bold !important;
        text-transform: uppercase;
      }
    </style>
  </head>
  
  <body>
    <div id="top">
      <% if @user %>
      <div id="badge">
        <span>root</span>
        <p>connected to <%= @host %></p>
        <p><a href="/databases">change database</a> / <a href="/">disconnect</a></p>
      </div>
      <% end %>
      
      <h1><%= @database || "Dataplace" %></h1>
      <h2><%= @comment || "Setting up connection" %></h2>
    </div>
    
    <div id="context">
        <div id="side">
          <%= @side %>
        </div>
      </div>
      
      <div id="content">
        <%= yield %>
      </div>
    
    <div id="bottom">
      powered by dataplace
    </div>
  </body>
</html>